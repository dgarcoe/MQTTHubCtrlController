<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textViewBroker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="33dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="46dp"
        android:text="Broker URL" />

    <EditText
        android:id="@+id/editTextBroker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textViewUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewBroker"
        android:layout_alignStart="@+id/textViewBroker"
        android:layout_below="@+id/textViewBroker"
        android:layout_marginTop="40dp"
        android:text="User" />

    <EditText
        android:id="@+id/editTextUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTextBroker"
        android:layout_alignStart="@+id/editTextBroker"
        android:layout_below="@+id/editTextBroker"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textViewPwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewUser"
        android:layout_alignStart="@+id/textViewUser"
        android:layout_below="@+id/textViewUser"
        android:layout_marginTop="40dp"
        android:text="Password" />

    <EditText
        android:id="@+id/editTextPwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTextUser"
        android:layout_alignStart="@+id/editTextUser"
        android:layout_below="@+id/editTextUser"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/textViewHub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewPwd"
        android:layout_alignStart="@+id/textViewPwd"
        android:layout_below="@+id/textViewPwd"
        android:layout_marginTop="46dp"
        android:text="Hub" />

    <EditText
        android:id="@+id/editTextHub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTextPwd"
        android:layout_alignStart="@+id/editTextPwd"
        android:layout_below="@+id/editTextPwd"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textViewPort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewHub"
        android:layout_alignStart="@+id/textViewHub"
        android:layout_below="@+id/textViewHub"
        android:layout_marginTop="50dp"
        android:text="Port" />

    <EditText
        android:id="@+id/editTextPort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTextHub"
        android:layout_alignStart="@+id/editTextHub"
        android:layout_below="@+id/editTextHub"
        android:layout_marginTop="19dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textViewPower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewHub"
        android:layout_alignStart="@+id/textViewHub"
        android:layout_below="@+id/textViewPort"
        android:layout_marginTop="50dp"
        android:text="Power" />

    <ToggleButton
        android:id="@+id/toggleButtonPower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTextHub"
        android:layout_alignStart="@+id/editTextHub"
        android:layout_below="@+id/editTextPort"
        android:layout_marginTop="25dp"
        android:text="ToggleButton" />

    <Button
        android:id="@+id/buttonSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toggleButtonPower"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:text="Send message" />


</RelativeLayout>
